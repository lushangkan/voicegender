{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "lib": ["es2017"],
  "include": [
    "index.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "noImplicitAny": false,
    "allowJs": true,
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
